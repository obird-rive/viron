  "scripts": {
    "start": "node app.js",
    "test": "run-s format lint spec",
    "build": "run-s build:clean build:prepare build:html build:swagger build:img build:font build:tinymce build:js build:css",
    "build:clean": "rm -rf dist",
    "build:prepare": "mkdir -p dist && mkdir -p dist/js && mkdir -p dist/tinymce",
    "build:html": "pug public -O package.json --out dist",
    "build:swagger": "cp public/js/swagger-client.js dist/js/swagger-client.js",
    "build:img": "imagemin public/img/**/* --out-dir=dist/img",
    "build:font": "cp -r public/font dist/font",
    "build:tinymce": "cp -r node_modules/tinymce/skins dist/tinymce/skins && cp -r node_modules/tinymce/themes dist/tinymce/themes",
    "build:js": "run-s build:js:bundle build:js:minify",
    "build:js:bundle": "rollup -c rollup.config.js",
    "build:js:minify": "uglifyjs dist/js/app.js --comments --mangle -o dist/js/app.min.js --source-map url=app.min.js.map",
    "build:css": "run-s build:css:prepare build:css:bundle build:css:minify",
    "build:css:prepare": "cp forbuild/src/css/app.css forbuild/src/css/app.tmp.css && node forbuild/task/build.css.tmp.js",
    "build:css:bundle": "postcss forbuild/src/css/app.tmp.css -o dist/css/app.css",
    "build:css:minify": "csswring dist/css/app.css dist/css/app.min.css",
    "watch": "run-p watch:html watch:js watch:css",
    "watch:html": "chokidar 'public/*.pug' -c 'npm run build:html'",
    "watch:js": "rollup -c rollup.local.config.js --watch",
    "watch:css": "chokidar 'forbuild/src/css/**/!(app.tmp).css' -c 'npm run build:css'",
    "format": "run-p format:js format:css",
    "format:js": "echo format:js",
    "format:css": "stylefmt -c .stylefmtrc  -r 'forbuild/src/css/**/!(Pagination).css'",
    "lint": "run-p lint:js lint:css",
    "lint:js": "eslint src",
    "lint:css": "stylelint forbuild/src/css/**/*.css",
    "spec": "mocha",
    "deploy:beta": "node forbuild/task/deploy.js -b",
    "deploy:rc": "node forbuild/task/deploy.js -c",
    "deploy:latest": "node forbuild/task/deploy.js",
    "release:beta": "run-s build deploy:beta",
    "release:rc": "run-s build deploy:rc",
    "release:latest": "run-s build deploy:latest",
    "ncu": "ncu"
  },
  "engines": {
    "node": ">=7"
  }
}
